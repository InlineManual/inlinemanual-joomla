<extension type="plugin" group="system" version="3.2.0">
  <name>plg_system_inlinemanual</name>
  <creationDate>February 2014</creationDate>
  <author>Vojtěch Kusý</author>
  <authorEmail>vojta@inlinemanual.com</authorEmail>
  <authorUrl>http://inlinemanual.com</authorUrl>
  <copyright>(C) 2014 InlineManual Ltd. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
  <version>0.0.1</version>
  <description>PLG_SYSTEM_INLINEMANUAL_XML_DESCRIPTION</description>
  <files>
    <filename plugin="inlinemanual">inlinemanual.php</filename>
    <filename>index.html</filename>
  </files>
  <languages>
    <language tag="en-GB">language/en-GB/en-GB.plg_system_inlinemanual.ini</language>
    <language tag="en-GB">language/en-GB/en-GB.plg_system_inlinemanual.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="application" type="radio" default="both"
               label="PLG_SYSTEM_INLINEMANUAL_DISPLAY_LABEL"
               description="PLG_SYSTEM_INLINEMANUAL_DISPLAY_DESC"
               class="btn-group"
               labelclass="control-label">
          <option value="admin">PLG_SYSTEM_INLINEMANUAL_DISPLAY_OPTION_ADMIN</option>
          <option value="site">PLG_SYSTEM_INLINEMANUAL_DISPLAY_OPTION_SITE</option>
          <option value="both">PLG_SYSTEM_INLINEMANUAL_DISPLAY_OPTION_BOTH</option>
        </field>
        <field name="backgroundColor" type="color" default="#222222"
               label="PLG_SYSTEM_INLINEMANUAL_BACKGROUND_COLOR_LABEL"
               description="PLG_SYSTEM_INLINEMANUAL_BACKGROUND_COLOR_DESC"
            />
        <field name="textColor" type="color" default="#FFFFFF"
               label="PLG_SYSTEM_INLINEMANUAL_TEXT_COLOR_LABEL"
               description="PLG_SYSTEM_INLINEMANUAL_TEXT_COLOR_DESC"
            />
      </fieldset>
    </fields>
  </config>
</extension>
